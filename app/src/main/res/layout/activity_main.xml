<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btSatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Satu"
        app:layout_constraintBaseline_toBaselineOf="@+id/btDua"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btDua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:text="Dua"
        app:layout_constraintBottom_toTopOf="@+id/btTiga"
        app:layout_constraintStart_toEndOf="@+id/btSatu"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btTiga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:text="Tiga"
        app:layout_constraintEnd_toEndOf="@+id/btDua"
        app:layout_constraintStart_toStartOf="@+id/btSatu"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btEmpat"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="31dp"
        android:text="Empat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btTiga"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>